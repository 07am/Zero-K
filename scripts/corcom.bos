MotionControl()
{
	while( 1 ) {
		if (isMoving) {
			if (isLasering || isDgunning) call-script WalkNoArms();
			else call-script WalkArms();
		} else {
			call-script RestoreLegs();
			sleep 100;
		}
	}
}

Create()
{
	hide ground;
	hide mlasflsh;
	hide bigflsh;
	hide nanospray;
	isMoving = 0;
	isLasering = 0;
	isDgunning = 0;
	gunLockOut = FALSE;
	shieldOn = 1;
	start-script MotionControl();
	
}

StartMoving() {
	isMoving = 1;
}

StopMoving() {
	isMoving = 0;
}

AimFromWeapon4(piecenum)
{
	piecenum = chest;
}

QueryWeapon4(piecenum)
{
	piecenum = mlasflsh;
}

Shot4() {
	emit-sfx 1025 from mlasflsh;
	emit-sfx 1026 from mlasflsh;
}

RestoreLaser(){
	sleep RESTORE_DELAY_LASER;
	isLasering = 0;
	turn l_sho to x-axis 0 speed ARM_SPEED_PITCH;
	if (!isDgunning) turn chest to y-axis 0 speed TORSO_SPEED_YAW;
}

AimWeapon4(heading, pitch)
{
	signal SIG_LASER;
	set-signal-mask SIG_LASER;
	isLasering = 1;
	if (!isDgunning) {
		turn chest to y-axis heading speed TORSO_SPEED_YAW;
	}
	turn l_sho to x-axis <0.000000> - pitch - <30> speed ARM_SPEED_PITCH;
	wait-for-turn l_sho around x-axis;
	start-script RestoreLaser();
	return (1);
}

AimFromWeapon3(piecenum)
{
	piecenum = chest;
}

QueryWeapon3(piecenum)
{
	piecenum = nanospray;
}

RestoreDgun(){
	set-signal-mask SIG_DGUN;
	sleep RESTORE_DELAY_DGUN;
	isDgunning = 0;
	turn l_sho to x-axis 0 speed ARM_SPEED_PITCH;
	turn l_nano to x-axis <36> speed ARM_SPEED_PITCH;
	if (!isLasering) turn chest to y-axis 0 speed TORSO_SPEED_YAW;	
}

AimWeapon3(heading, pitch)
{
	signal SIG_DGUN;
	set-signal-mask SIG_DGUN;
	isDgunning = 1;
	turn chest to y-axis heading speed TORSO_SPEED_YAW;
	turn l_nano to x-axis <0.000000> - pitch - <30> speed ARM_SPEED_PITCH;
	wait-for-turn chest around y-axis;
	wait-for-turn l_nano around x-axis;
	start-script RestoreDgun();
	return (1);
}

FireWeapon3() {
	emit-sfx 1025 from mlasflsh;
	call-script BigFire();
}

StopBuilding(){
	set INBUILDSTANCE to 0;
	turn r_sho to x-axis 0 speed ARM_SPEED_PITCH;
	if (!isLasering && !isDgunning) turn chest to y-axis 0 speed TORSO_SPEED_YAW;
}

StartBuilding(heading, pitch) {
	turn r_sho to x-axis <0.000000> - pitch - <30> speed ARM_SPEED_PITCH;
	if (!isDgunning&& !isDgunning) turn chest to y-axis heading speed TORSO_SPEED_YAW;
	set INBUILDSTANCE to 1;
}

